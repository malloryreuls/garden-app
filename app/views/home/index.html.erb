<h1>🐝 Homesteady 🐞</h1>
<p>Track your garden.</p>

<h2>Plants <small><%= link_to '(Add Plant)', new_plant_path %></small></h2>
<% @plants.each do |plant| %>
  <ul>
    <li style="list-style:none">
      <%= link_to plant.name, plant %>
      <%- if current_user %>
        <%= button_to "track", user_my_plants_path(user_id: current_user.id, plant_id: plant.id) %>
      <% end %>
    </li>
  </ul>
<% end %>
