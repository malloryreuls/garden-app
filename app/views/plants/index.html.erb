<h1>Plants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Sun</th>
      <th>Germination</th>
      <th>Season</th>
      <th>Depth</th>
      <th>Spacing</th>
      <th>Height<th>
      <th>Days to harvest</th>
      <th>Friends</th>
      <th>Foes</th>
      <th>More information</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plants.each do |plant| %>
      <tr>
        <td><%= plant.name %></td>
        <td><%= plant.sun %></td>
        <td><%= plant.germination %></td>
        <td><%= plant.season %></td>
        <td><%= plant.depth %></td>
        <td><%= plant.spacing %></td>
        <td><%= plant.plant_height %></td>
        <td><%= plant.days_to_harvest %></td>
        <td><%= plant.friends %></td>
        <td><%= plant.foes %></td>
        <td><%= plant.more_information %></td>
        <td><%= link_to 'Show', plant %></td>
        <td><%= link_to 'Edit', edit_plant_path(plant) %></td>
        <td><%= link_to 'Destroy', plant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Plant', new_plant_path %>
